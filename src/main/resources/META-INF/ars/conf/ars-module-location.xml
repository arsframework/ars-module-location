<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- Location module configuration -->
	
	<!-- Address Repository -->
	<bean class="ars.module.location.repository.StandardAddressRepository"/>
	
	<!-- Area Repository -->
	<bean class="ars.module.location.repository.StandardAreaRepository"/>
	
	<!-- Route Repository -->
	<bean class="ars.module.location.repository.StandardRouteRepository"/>
	
	<!-- Address Service -->
	<bean class="ars.module.location.service.StandardAddressService"/>
	
	<!-- Area Service -->
	<bean class="ars.module.location.service.StandardAreaService"/>
	
	<!-- Route Service -->
	<bean class="ars.module.location.service.StandardRouteService"/>
</beans>